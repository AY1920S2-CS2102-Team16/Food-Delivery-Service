<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar') %>
            <!-- Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= navbarTitle %></h1>
                </div>
                <form method="post">
                    <div class="row">
                        <div class="col-4">
                            <div class="input-group">
                                <input type="text"
                                       name="keyword"
                                       required
                                       class="form-control border-1 bg-light"
                                       placeholder="Search for food..."
                                       aria-label="Search"
                                       aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <select required class="selectpicker"
                                    name="food_price"
                                    id="price-select"
                                    data-style="btn-outline-secondary"
                                    data-width="100%"
                            >
                                <option selected value=0>All price range</option>
                                <option value=1>$</option>
                                <option value=2>$$</option>
                                <option value=3>$$$</option>
                                <option value=4>$$$$</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <select
                                    required
                                    class="selectpicker"
                                    name="food_category"
                                    id="category-select"
                                    multiple
                                    data-style="btn-outline-secondary"
                                    data-width="100%"
                            >
                                <option selected value="Chinese">Chinese</option>
                                <option selected value="Western">Western</option>
                                <option selected value="Malay">Malay</option>
                                <option selected value="Indian">Indian</option>
                                <option selected value="Fast food">Fast Food</option>
                            </select>
                        </div>
                    </div>
                </form>
                <div class="row mt-3">
                    <div class="col-12">
                        <% searchRes.forEach(function (res) { %>
                        <div class="card mb-2">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/customer/restaurants/<%= res.rid %>"><%= res.food_name %></a>
                                </h5>
                                <div class="card-text text-muted"><%= res.rname %></div>
                                <div class="card-text text-muted"><%= res.food_category %></div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<%- include ('../../partials/foot') %>
<!-- Latest compiled and minified JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
<!-- (Optional) Latest compiled and minified JavaScript translation files -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/i18n/defaults-*.min.js"></script>
<script>
    $('.category-select').selectpicker();
    $('.price-select').selectpicker();
</script>
</body>

</html>
