<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= navbarTitle %>, <%= user.username %>!</h1>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card border-left-primary">
                            <div class="card-body">
                                <h4 class=" text-primary mb-3">My favorite restaurants</h4>
                                <div class="row">
                                    <% favorite_rest.forEach(function (rest){ %>
                                        <div class="col-3">
                                            <div class="card bg-light">
                                                <div class="card-body my-auto">
                                                    <h5 class="text-center my-auto">
                                                        <a
                                                                href="/customer/restaurants/<%= rest.id %>">
                                                            <%= rest.rname %>
                                                        </a>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="card border-left-info">
                            <div class="card-body">
                                <h4 class=" text-primary mb-3">Explore restaurants</h4>
                                <div class="row">
                                    <% random_rest.forEach(function (rest){ %>
                                        <div class="col-3">
                                            <div class="card bg-light flex-fill">
                                                <div class="card-body flex-fill">
                                                    <h5 class="card-title"><a
                                                                href="/customer/restaurants/<%= rest.id %>"><%= rest.rname %></a>
                                                    </h5>
                                                    <p class="card-text text-muted"><%= rest.description %></p>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="card border-left-warning">
                            <div class="card-body">
                                <h4 class=" text-primary mb-3">My rewards</h4>
                                <div class="row">
                                    <div class="col-12">
                                        <h4>You have <%= user.reward_points %> reward points</h4>
                                        <span class="text-muted">30 points = 1 free delivery</span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include ('../../partials/foot') %>
</body>

</html>
