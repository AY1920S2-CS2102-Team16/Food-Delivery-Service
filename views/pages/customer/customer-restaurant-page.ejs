<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar') %>
            <!-- Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= navbarTitle %></h1>
                </div>
                <form action="checkout">
                    <div class="row mt-3 mr-1 ml-1 justify-content-center">
                        <div class="col-6 text-center">
                            <select class="browser-default custom-select custom-select-lg mb-3">
                                <option selected>Delivers to...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mr-1 ml-1" style="margin-bottom: 80px">
                        <div class="col-12">
                            <div class="card mb-3 border-0">
                                <div class="card-body">
                                    <h1 class="card-title text-center"><%= restaurant.rname %></h1>
                                    <p class="card-text text-muted text-center"><%= restaurant.description %></p>
                                </div>
                            </div>
                        </div>
                        <% foods.forEach(food => { %>
                            <div class="col-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= food.food_name %> </h5>
                                        <p class="card-text text-muted">
                                            <span class="badge badge-pill badge-info align-middle"><%= food.food_category %></span>
                                            <%= food.food_description %>
                                        </p>
                                        <p class="card-text">$<%= food.price %></p>
                                        <div class="text-right">
                                            <button class="btn btn-light" type="button"
                                                    onclick="increase('<%= food.food_name %>')">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            <label class="ml-2 mr-2" id="<%= food.food_name %>">0</label>
                                            <input type="hidden" id="<%= food.food_name %>-hidden"
                                                   name="<%= food.food_name %>"
                                                   value=0>
                                            <button class="btn btn-light" type="button"
                                                    onclick="decrease('<%= food.food_name %>')">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <footer class="fixed-bottom mb-3">
                        <div class="row">
                            <div class="col-12 text-right">
                                <span class="font-weight-normal mr-3" id="total">$60.00</span>
                                <button class="btn btn-outline-success mr-3" type="submit"><strong>Checkout</strong>
                                </button>
                            </div>
                        </div>
                    </footer>
                </form>
            </div>
        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<script>
    function increase(foodName) {
        counter = document.getElementById(foodName);
        counter.textContent = parseInt(counter.textContent) + 1;
        document.getElementById(foodName + "-hidden").value = parseInt(counter.textContent, 10);
    }

    function decrease(foodName) {
        counter = document.getElementById(foodName);
        counter.textContent = (parseInt(counter.textContent) - 1) < 0 ? 0 : (parseInt(counter.textContent) - 1);
        document.getElementById(foodName + "-hidden").value = parseInt(counter.textContent, 10);
    }
</script>

<%- include ('../../partials/foot') %>
</body>

</html>
