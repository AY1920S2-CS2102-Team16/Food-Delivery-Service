<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar') %>
            <!-- Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= navbarTitle %></h1>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                Order Details
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Food</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Subtotal</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% order.foods.forEach(function (food) { %>
                                    <tr>
                                        <td><%= food.name %></td>
                                        <td><%= food.quantity %></td>
                                        <td>1</td>
                                        <td>1</td>
                                    </tr>
                                    <% }) %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<script>
    function increase(foodName) {
        counter = document.getElementById(foodName);
        counter.textContent = parseInt(counter.textContent) + 1;
        document.getElementById(foodName + "-hidden").value = parseInt(counter.textContent, 10);
    }

    function decrease(foodName) {
        counter = document.getElementById(foodName);
        counter.textContent = (parseInt(counter.textContent) - 1) < 0 ? 0 : (parseInt(counter.textContent) - 1);
        document.getElementById(foodName + "-hidden").value = parseInt(counter.textContent, 10);
    }
</script>

<%- include ('../../partials/foot') %>
</body>

</html>
