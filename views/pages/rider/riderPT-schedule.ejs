<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
    <link href="/stylesheets/rider-schedule.css" rel="stylesheet">
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar', {navbarTitle: navbarTitle}) %>

            <!-- Schedule Page Content -->
            <div class="container-fluid">
                <table>
                    <caption>Weekly Work Schedule</caption>
                    <body>
                    <tr>
                        <th id="head">#</th>
                        <td id="head">10:00</td>
                        <td id="head">11:00</td>
                        <td id="head">12:00</td>
                        <td id="head">13:00</td>
                        <td id="head">14:00</td>
                        <td id="head">15:00</td>
                        <td id="head">16:00</td>
                        <td id="head">17:00</td>
                        <td id="head">18:00</td>
                        <td id="head">19:00</td>
                        <td id="head">20:00</td>
                        <td id="head">21:00</td>
                    </tr>
                    <% schedules.forEach(function (schedule) { %>
                        <tr>
                            <th id="middle">
                                <%= [start_of_week.getFullYear(), start_of_week.getMonth() + 1, start_of_week.getDate()].join('/') %>
                            </th>
                            <%let current_hour = 10%>
                            <% schedule.forEach(function (interval) { %>
                                <%if (current_hour < interval[0]) { %>
                                    <td id="content" colspan="<%= interval[0] - current_hour%>" ></td>
                                    <%current_hour = interval[0]%>
                                <% } %>
                                <td id="content" colspan="<%= interval[1]%>" class="stage-saturn" >
                                    <%= current_hour%>:00 - <%= current_hour + interval[1]%>:00
                                </td>
                                <%current_hour += interval[1]%>
                            <% }) %>
                        </tr>
                        <%start_of_week.setDate(start_of_week.getDate() + 1)%>
                    <% }) %>
                    </body>
                </table>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Modal -->
        <div class="modal fade" id="ScheduleModal" tabindex="-1" role="dialog" aria-labelledby="PTScheduleModalTitle"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="PTScheduleModalTitle">Select Schedule For This Week</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/rider/schedule/changeSchedule" method="post">
                        <div class="modal-body">
                            <input type="hidden" id="oid" name="oid">
                            <div class="row">
                                <div class="col-md-12">
                                    How is the delivery experience?
                                    <select required class="custom-select form-control mb-3" name="role"
                                            id="roleSelect">
                                        <option value="Excellent">Excellent</option>
                                        <option value="Good">Good</option>
                                        <option value="Average">Average</option>
                                        <option value="Bad">Bad</option>
                                        <option value="Terrible">Terrible</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <textarea class="form-control"
                                              id="1"
                                              name="review"
                                              rows="6"
                                              required
                                              placeholder="What do you think of the food?"
                                    ></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create/Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- End of Modal -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include ('../../partials/foot') %>
<script>
    $("#reviewModal").on("show.bs.modal", function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal
        var oid = button.data("oid"); // Extract info from data-* attributes
        var modal = $(this);
        modal.find(".modal-body #oid").val(oid);
    });
</script>
</body>

</html>
