<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
    <link href="/stylesheets/rider-schedule.css" rel="stylesheet">
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar', {navbarTitle: navbarTitle}) %>

            <!-- Schedule Page Content -->
            <div class="container-fluid">
                <table>
                    <caption>Weekly Work Schedule</caption>
                    <body>
                    <tr>
                        <th id="head">#</th>
                        <td>10:00</td>
                        <td>11:00</td>
                        <td>12:00</td>
                        <td>13:00</td>
                        <td>14:00</td>
                        <td>15:00</td>
                        <td>16:00</td>
                        <td>17:00</td>
                        <td>18:00</td>
                        <td>19:00</td>
                        <td>20:00</td>
                        <td>21:00</td>
                    </tr>
                    <% schedules.forEach(function (schedule) { %>
                        <tr>
                            <th id="middle">
                                <%= [start_of_week.getFullYear(), start_of_week.getMonth() + 1, start_of_week.getDate()].join('/') %>
                            </th>
                            <%let current_hour = 10%>
                            <% schedule.forEach(function (interval) { %>
                                <%if (current_hour < interval[0]) { %>
                                    <td colspan="<%= interval[0] - current_hour%>" ></td>
                                    <%current_hour = interval[0]%>
                                <% } %>
                                <td colspan="<%= interval[1]%>" class="stage-saturn" >
                                    <%= current_hour%>:00 - <%= current_hour + interval[1]%>:00
                                </td>
                                <%current_hour += interval[1]%>
                            <% }) %>
                        </tr>
                        <%start_of_week.setDate(start_of_week.getDate() + 1)%>
                    <% }) %>
                    </body>
                </table>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Modal to be added here -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include ('../../partials/foot') %>
</body>

</html>
