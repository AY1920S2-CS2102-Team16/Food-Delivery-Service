<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/head') %>
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include ('../../partials/sidebar', {items: sidebarItems}) %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include ('../../partials/navbar') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= navbarTitle %></h1>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <% if ( successFlash.length > 0 ) { %>
                            <div class="alert alert-success mb-4" role="alert">
                                <%= successFlash %>
                            </div>
                        <% } %>
                        <% if ( errorFlash.length > 0 ) { %>
                            <div class="alert alert-danger mb-4" role="alert">
                                <%= errorFlash %>
                            </div>
                        <% } %>
                    </div>
                </div>
                <form method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="card mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Restaurant Information</h6>
                                    <span class="text-muted">Restaurant information is displayed here.</span>
                                </div>
                                <div class="card-body">
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">User ID</strong>
                                        </div>
                                        <div class="col-10 text-left my-auto">
                                            <input type="text" id="userName" class="form-control" disabled
                                                   value="<%= user.id %>">
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">Username</strong>
                                        </div>
                                        <div class="col-10 text-left my-auto">
                                            <input type="text" id="userName" name="userName" class="form-control"
                                                   placeholder="Restaurant name" required value="<%= user.username %>">
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">Description</strong>
                                        </div>
                                        <div class="col-10 text-left my-auto">
                                            <input type="text" id="desc" name="description" class="form-control"
                                                   placeholder="A brief description of your property" required
                                                   value="<%= user.description %>">
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">Address</strong>
                                        </div>
                                        <div class="col-10 text-left my-auto">
                                            <input type="text" id="address" name="address" class="form-control"
                                                   placeholder="Address of your property" required
                                                   value="<%= user.address %>">
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">Latitude</strong>
                                        </div>
                                        <div class="col-4 text-left my-auto">
                                            <input type="text" class="form-control" placeholder="Latitude" required
                                                   name="lat" value="<%= user.lat %>">
                                        </div>
                                        <div class="col-2 text-center my-auto">
                                            <strong class="text-primary">Longitude</strong>
                                        </div>
                                        <div class="col-4 text-left my-auto">
                                            <input type="text" class="form-control" placeholder="Longitude" required
                                                   name="lon" value="<%= user.lon %>">
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-2 text-left my-auto">
                                            <strong class="text-primary">Password</strong>
                                        </div>
                                        <div class="col-10 text-left my-auto">
                                            <input type="password" id="inputPassword" name="password"
                                                   class="form-control"
                                                   placeholder="New password (Leave Blank if you don't want to change)"
                                                   value="">
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-12 text-right">
                                            <button class="btn btn-outline-primary" type="submit">Update</button>
                                            <div class="text-muted mt-1">You may be logged out.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include ('../../partials/foot') %>
</body>

</html>
